@model ModuloAdministrador.Models.Users

@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Views/Shared/_LayoutSeccionAdministrador.cshtml";
}

<h2>Eliminar Usuario</h2>

<div class="alert alert-warning" role="alert">
    <h4>¿Estás seguro de que deseas eliminar este usuario?</h4>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Nombre de Usuario: @Model.UserName</h5>
        <p class="card-text"><strong>Tipo de Usuario:</strong> @Model.TypeUser</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IduserPK" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
